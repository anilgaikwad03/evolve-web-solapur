---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { services, pricingPlans } from '../data/services.js';
---

<BaseLayout title="Services | Evolve Web Solapur" description="Comprehensive web development, UI/UX design, and performance optimization services to elevate your digital presence.">
  <Header />
  
  <main class="min-h-screen bg-white dark:bg-black pt-20">
    <!-- Premium Hero Section -->
    <section class="relative py-20 sm:py-32 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 -left-10 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 -right-10 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-full blur-3xl"></div>
      </div>

      <div class="w-full px-4 sm:px-6 lg:grid-system relative z-10">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Premium Badge -->
          <div class="inline-flex items-center gap-3 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md rounded-full px-6 py-3 border border-gray-200/50 dark:border-gray-700/50 shadow-lg mb-8">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="font-grotesk text-sm font-medium text-gray-700 dark:text-gray-300">Premium Digital Services</span>
          </div>

          <h1 class="font-grotesk text-5xl sm:text-6xl md:text-7xl font-bold block text-transparent bg-clip-text bg-gradient-to-r from-gray-400 to-gray-600 dark:text-white mb-6 leading-tight">
            CRAFTING
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 mt-4">
              DIGITAL EXCELLENCE
            </span>
          </h1>
          
          <p class="font-sans text-xl sm:text-2xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-3xl mx-auto mb-12">
            We transform your vision into exceptional digital experiences through innovative design, 
            cutting-edge development, and performance optimization.
          </p>

        </div>
      </div>
    </section>

    <!-- Premium Services Grid -->
    <section class="py-20 sm:py-32 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
      <div class="w-full px-4 sm:px-12 lg:grid-system">
        <div class="text-center max-w-3xl mx-auto mb-16 sm:mb-24">
          <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            OUR SERVICES
          </h2>
          <p class="font-sans text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
            Comprehensive digital solutions designed to elevate your brand and drive measurable results.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8 sm:gap-12">
          {services.map((service, index) => (
            <div class="group relative">
              <!-- Main Card -->
              <div class="relative bg-white dark:bg-gray-800 rounded-3xl p-8 sm:p-10 shadow-2xl hover:shadow-3xl transition-all duration-500 border border-gray-100 dark:border-gray-700 group-hover:scale-105 group-hover:-translate-y-2">
                <!-- Icon with Gradient Background -->
                <div class="relative mb-8">
                  <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                    <span class="text-2xl text-white">{service.icon}</span>
                  </div>
                  <div class="absolute -top-2 -right-2 w-8 h-8 bg-white dark:bg-gray-900 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-green-500 text-lg">âœ“</span>
                  </div>
                </div>

                <!-- Content -->
                <h3 class="font-grotesk text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-4">
                  {service.title}
                </h3>
                
                <p class="font-sans text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                  {service.description}
                </p>

                <!-- Features Preview -->
                <div class="space-y-3 mb-8">
                  {service.features.slice(0, 3).map((feature) => (
                    <div class="flex items-center gap-3">
                      <div class="w-2 h-2 bg-blue-500 rounded-full flex-shrink-0"></div>
                      <span class="font-sans text-gray-600 dark:text-gray-400 text-sm">{feature}</span>
                    </div>
                  ))}
                  {service.features.length > 3 && (
                    <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400">
                      <div class="w-2 h-2 bg-gray-400 rounded-full flex-shrink-0"></div>
                      <span class="font-sans text-sm">+{service.features.length - 3} more features</span>
                    </div>
                  )}
                </div>

                <!-- Technologies -->
                <div class="mb-8">
                  <div class="flex flex-wrap gap-2">
                    {service.technologies.slice(0, 4).map((tech) => (
                      <span class="text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full border border-gray-200 dark:border-gray-600">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- CTA -->
                <a 
                  href="/contact" 
                  class="group/btn w-full inline-flex items-center justify-center font-grotesk font-medium bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-6 py-4 rounded-xl hover:bg-gray-800 dark:hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
                >
                  Explore {service.title}
                  <span class="ml-2 group-hover/btn:translate-x-1 transition-transform">â†’</span>
                </a>
              </div>

              <!-- Floating Elements -->
              <div class="absolute -z-10 top-4 -right-4 w-24 h-24 bg-blue-500/10 rounded-full blur-xl group-hover:bg-purple-500/10 transition-colors duration-500"></div>
              <div class="absolute -z-10 bottom-4 -left-4 w-16 h-16 bg-purple-500/10 rounded-full blur-lg group-hover:bg-blue-500/10 transition-colors duration-500"></div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Timeline -->
    <section class="py-20 sm:py-32 bg-white dark:bg-gray-900">
      <div class="w-full px-4 sm:px-6 lg:grid-system">
        <div class="text-center max-w-3xl mx-auto mb-8 sm:mb-12">
          <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            WEB DESIGNING PROCESS
          </h2>
          <p class="font-sans text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
            A structured approach that ensures quality, transparency, and exceptional results.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="grid gap-4 sm:gap-6">
            {[
              {
                step: "01",
                title: "Data Collection",
                description: "Our first phase of web designing services includes understanding the requirements of clients and their business objectives. We gather as much as data or information that can bring desired digital marketing results for our clients.",
                icon: "ðŸ”"
              },
              {
                step: "02", 
                title: "Design & Prototyping",
                description: "Our design team creates stunning visuals and interactive prototypes that bring your vision to life.",
                icon: "ðŸŽ¨"
              },
              {
                step: "03",
                title: "Development & Implementation", 
                description: "Our first phase of web designing services includes understanding the requirements of clients and their business objectives. We gather as much as data or information that can bring desired digital marketing results for our clients.",
                icon: "âš¡"
              },
              {
                step: "04",
                title: "Testing & Quality Assurance",
                description: "In this stage of web design, we conduct a thorough testing of the entire website to ensure faster loading devoid of other technical glitches. It ensures the delivery of a well optimized website that meets the clientsâ€™ expectations.",
                icon: "ðŸ§ª"
              },
              {
                step: "05",
                title: "Launch & Deployment",
                description: "Seamless deployment with continuous monitoring and optimization for peak performance.",
                icon: "ðŸš€"
              },
              {
                step: "06", 
                title: "Support & Evolution",
                description: "As a crucial part of our web designing services, once the project is delivered, we offer maintenance and update of the website on clientâ€™s request. we offer yearly plans which include regular maintenance.",
                icon: "ðŸ”„"
              }
            ].map((process, index) => (
              <div class="flex flex-col sm:flex-row gap-6 sm:gap-8 group">
                <!-- Step Number -->
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                    <span class="text-white font-grotesk font-bold text-lg">{process.step}</span>
                  </div>
                </div>

                <!-- Content -->
                <div class="flex-1 bg-gray-50 dark:bg-gray-800 rounded-3xl p-6 sm:p-8 group-hover:shadow-2xl transition-all duration-500 border border-gray-100 dark:border-gray-700">
                  <div class="flex items-center gap-4 mb-4">
                    <span class="text-2xl">{process.icon}</span>
                    <h3 class="font-grotesk text-2xl font-bold text-gray-900 dark:text-white">
                      {process.title}
                    </h3>
                  </div>
                  <p class="font-sans text-gray-600 dark:text-gray-400 leading-relaxed">
                    {process.description}
                  </p>
                </div>

                <!-- Connector Line (except last) -->
                {index < 5 && (
                  <div class="hidden sm:block absolute left-8 top-16 w-0.5 h-16 bg-gradient-to-b from-blue-500 to-purple-600 -z-10 ml-7"></div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 sm:py-32 bg-gray-200 relative overflow-hidden">
      <!-- Animated Background -->
      <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 right-0 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
      </div>

      <div class="w-full px-4 sm:px-6 lg:grid-system relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-black mb-6">
            READY TO ELEVATE YOUR DIGITAL PRESENCE?
          </h2>
          <p class="font-sans text-xl text-black mb-8 leading-relaxed">
            Let's create something extraordinary together. Your vision, our expertise, exceptional results.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="group inline-flex items-center justify-center font-grotesk font-bold bg-white text-gray-900 px-8 py-4 rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-2xl">
              Start Your Project
              <span class="ml-3 group-hover:translate-x-2 transition-transform">ðŸš€</span>
            </a>
            <a href="/work" class="group inline-flex items-center justify-center font-grotesk font-medium border-2 border-blue-400 text-black px-8 py-4 rounded-xl hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
              View Our Portfolio
              <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>