---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout title="Contact | Evolve Web Solapur" description="Get in touch with EvolveWeb to discuss your project. Let's create something extraordinary together.">
  <Header />
  
  <main class="min-h-screen bg-white dark:bg-black pt-20">
    <!-- Premium Hero Section -->
    <section class="relative py-20 sm:py-32 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 -left-20 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-cyan-500/5 rounded-full blur-3xl"></div>
      </div>

      <div class="w-full px-4 sm:px-6 lg:grid-system relative z-10">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Premium Badge -->
          <div class="inline-flex items-center gap-3 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md rounded-full px-6 py-3 border border-gray-200/50 dark:border-gray-700/50 shadow-lg mb-8">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="font-grotesk text-sm font-medium text-gray-700 dark:text-gray-300">Ready to Collaborate</span>
          </div>

          <h1 class="font-grotesk text-5xl sm:text-6xl md:text-7xl font-bold block text-transparent bg-clip-text bg-gradient-to-r from-gray-400 to-gray-600 dark:text-white mb-6 leading-tight">
            LET'S
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 mt-4">
              CREATE TOGETHER
            </span>
          </h1>
          
          <p class="font-sans text-xl sm:text-2xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-3xl mx-auto">
            Ready to bring your vision to life? Let's discuss your project and create something 
            extraordinary that drives real results.
          </p>
        </div>
      </div>
    </section>

        <!-- Contact Section - Fixed Grid -->
    <section class="py-20 sm:py-32 bg-gray-50 dark:bg-gray-900">
      <div class="w-full px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16 sm:mb-20">
          <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            GET IN TOUCH
          </h2>
          <p class="font-sans text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
            Ready to start your project? Let's discuss how we can bring your vision to life.
          </p>
        </div>

        <!-- Main Grid Container -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
          <!-- Left Column - Contact Information -->
          <div class="space-y-6">
            <!-- Contact Methods Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <!-- Email -->
              <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-2xl flex items-center justify-center shadow-lg mb-4">
                  <span class="text-white text-xl">‚úâÔ∏è</span>
                </div>
                <h3 class="font-grotesk text-lg font-bold text-gray-900 dark:text-white mb-2">
                  Email Us
                </h3>
                <a href="mailto:hello@evolveweb.in" class="font-sans text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors block mb-1">
                  evolvewebsolapur@gmail.com
                </a>
                <p class="font-sans text-gray-500 dark:text-gray-500 text-sm">
                  Reply within 4 hours
                </p>
              </div>

              <!-- Phone -->
              <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg mb-4">
                  <span class="text-white text-xl">üì±</span>
                </div>
                <h3 class="font-grotesk text-lg font-bold text-gray-900 dark:text-white mb-2">
                  Call Us
                </h3>
                <a href="tel:+911234567890" class="font-sans text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors block mb-1">
                  +91 84215 94102
                </a>
                <p class="font-sans text-gray-500 dark:text-gray-500 text-sm">
                  Mon-Fri, 10am-4pm
                </p>
              </div>

              <!-- Location -->
              <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg mb-4">
                  <span class="text-white text-xl">üìç</span>
                </div>
                <h3 class="font-grotesk text-lg font-bold text-gray-900 dark:text-white mb-2">
                  Based In
                </h3>
                <p class="font-sans text-gray-600 dark:text-gray-400 mb-1">
                  Solapur, Maharshtra, India
                </p>
                <p class="font-sans text-gray-500 dark:text-gray-500 text-sm">
                  National clients welcome
                </p>
              </div>

              <!-- Response Time -->
              <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl flex items-center justify-center shadow-lg mb-4">
                  <span class="text-white text-xl">‚ö°</span>
                </div>
                <h3 class="font-grotesk text-lg font-bold text-gray-900 dark:text-white mb-2">
                  Response Time
                </h3>
                <p class="font-sans text-gray-600 dark:text-gray-400 mb-1">
                  Within 4 Hours
                </p>
                <p class="font-sans text-gray-500 dark:text-gray-500 text-sm">
                  For initial inquiries
                </p>
              </div>
            </div>

            <!-- Social Links -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-100 dark:border-gray-700">
              <h3 class="font-grotesk text-xl font-bold text-gray-900 dark:text-white mb-4">
                Follow Our Work
              </h3>
              <div class="flex gap-3">
                <a href="#" class="w-12 h-12 bg-gray-50 dark:bg-gray-700 rounded-xl flex items-center justify-center shadow-md hover:shadow-lg transition-all duration-300 hover:scale-110 border border-gray-200 dark:border-gray-600">
                  <span class="text-lg">
                    <img src="https://img.icons8.com/?size=100&id=118497&format=png&color=000000" alt="" srcset="">
                  </span>
                </a>
                <a href="#" class="w-12 h-12 bg-gray-50 dark:bg-gray-700 rounded-xl flex items-center justify-center shadow-md hover:shadow-lg transition-all duration-300 hover:scale-110 border border-gray-200 dark:border-gray-600">
                  <span class="text-lg">
                    <img src="https://img.icons8.com/?size=100&id=16713&format=png&color=000000" alt="" srcset="">
                  </span>
                </a>
                <a href="#" class="w-12 h-12 bg-gray-50 dark:bg-gray-700 rounded-xl flex items-center justify-center shadow-md hover:shadow-lg transition-all duration-300 hover:scale-110 border border-gray-200 dark:border-gray-600">
                  <span class="text-lg">
                    <img src="https://img.icons8.com/?size=100&id=13930&format=png&color=000000" alt="" srcset="">
                  </span>
                </a>
                <a href="#" class="w-12 h-12 bg-gray-50 dark:bg-gray-700 rounded-xl flex items-center justify-center shadow-md hover:shadow-lg transition-all duration-300 hover:scale-110 border border-gray-200 dark:border-gray-600">
                  <span class="text-lg">
                    <img src="https://img.icons8.com/?size=100&id=63306&format=png&color=000000" alt="" srcset="">
                  </span>
                </a>
              </div>
            </div>

            <!-- Process Info -->
            <div class="bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl p-6 text-white shadow-lg">
              <h3 class="font-grotesk text-xl font-bold mb-3">
                Our Process
              </h3>
              <div class="space-y-2 text-blue-100">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-white rounded-full"></div>
                  <span class="text-sm">Consultation & Discovery</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-white rounded-full"></div>
                  <span class="text-sm">Proposal & Planning</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-white rounded-full"></div>
                  <span class="text-sm">Design & Development</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-white rounded-full"></div>
                  <span class="text-sm">Launch & Support</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Contact Form -->
          <div class="lg:sticky lg:top-8">
            <div class="bg-white dark:bg-gray-800 rounded-3xl p-6 sm:p-8 shadow-2xl border border-gray-100 dark:border-gray-700">
              <div class="text-center mb-8">
                <h3 class="font-grotesk text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2">
                  Start Your Project
                </h3>
                <p class="font-sans text-gray-600 dark:text-gray-400">
                  Fill out the form and we'll get back to you within 2 hours.
                </p>
              </div>

              <form class="space-y-6" id="contact-form">
                <!-- Name & Email Row -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <div>
                    <label for="name" class="block font-grotesk font-medium text-gray-900 dark:text-white mb-2 text-sm">
                      Your Name *
                    </label>
                    <input 
                      type="text" 
                      id="name" 
                      name="name"
                      required
                      class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 text-sm"
                      placeholder="Full name"
                    />
                  </div>
                  <div>
                    <label for="email" class="block font-grotesk font-medium text-gray-900 dark:text-white mb-2 text-sm">
                      Email Address *
                    </label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email"
                      required
                      class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 text-sm"
                      placeholder="your@email.com"
                    />
                  </div>
                </div>

                <!-- Project Type & Budget Row -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <div>
                    <label for="projectType" class="block font-grotesk font-medium text-gray-900 dark:text-white mb-2 text-sm">
                      Project Type *
                    </label>
                    <select 
                      id="projectType" 
                      name="projectType"
                      required
                      class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white text-sm"
                    >
                      <option value="">Select type</option>
                      <option value="web-development">Web Development</option>
                      <option value="ui-ux-design">UI/UX Design</option>
                      <option value="performance-optimization">Performance Optimization</option>
                      <option value="consultation">Consultation</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  <div>
                    <label for="budget" class="block font-grotesk font-medium text-gray-900 dark:text-white mb-2 text-sm">
                      Budget Range *
                    </label>
                    <select 
                      id="budget" 
                      name="budget"
                      required
                      class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white text-sm"
                    >
                      <option value="">Select budget</option>
                      <option value="2k-5k">Rs 15,000 - Rs 30,000</option>
                      <option value="5k-10k">Rs 30,000 - Rs 50,000</option>
                      <option value="25k-plus">Rs 50,000+</option>
                      <option value="not-sure">Not Sure Yet</option>
                    </select>
                  </div>
                </div>

                <!-- Message -->
                <div>
                  <label for="message" class="block font-grotesk font-medium text-gray-900 dark:text-white mb-2 text-sm">
                    Project Details *
                  </label>
                  <textarea 
                    id="message" 
                    name="message"
                    rows="4"
                    required
                    class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 resize-none text-sm"
                    placeholder="Tell us about your project, goals, and requirements..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit"
                  class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white font-grotesk font-bold py-4 px-8 rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
                >
                  <span>Send Message</span>
                  <span class="text-lg">üöÄ</span>
                </button>

                <p class="text-center text-gray-500 dark:text-gray-400 text-xs">
                  We respect your privacy and will never share your information.
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 sm:py-32 bg-white dark:bg-gray-900">
      <div class="w-full px-4 sm:px-6 lg:grid-system">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16 sm:mb-24">
            <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
              COMMON QUESTIONS
            </h2>
            <p class="font-sans text-xl text-gray-600 dark:text-gray-400">
              Everything you need to know before starting your project.
            </p>
          </div>

          <div class="grid gap-6">
            {[
              {
                question: "How much will a website cost me?",
                answer: "The cost of a website varies according to its complexity. We are happy to discuss your needs and provide a quote at any time."
              },
              {
                question: "How long will it take to design my website?",
                answer: "The time it takes to build a site depends on the complexity of the site. If you have a deadline, we will work difficult to meet. The most common cause of delay is the content (text / images) of the client."
              },
              {
                question: "Will we need a meeting to discuss the website design?",
                answer: "Most of the time a meeting is not necessary and the work is completed only with telephone discussions and email. We upload our work to private websites that only customers can access. So we work with you for discuss the site and review the changes. The site is not made available to the public until it appears and works exactly as you wish."
              },
              {
                question: " Are there any hidden costs with web design services?",
                answer: "No! We discuss your website requirements and pricing accordingly. After placing your order with us, we will adhere to our indicated price."
              },
              {
                question: "How many pages can I have on my website?",
                answer: "You can have as many pages as you want. In fact, the more the better from a search engine's point of view!"
              },
              {
                question: "Can you help my current site look more professional?",
                answer: "Yes. Give us your needs and we have experience to help you give a new one professional look that really whistles!"
              },
              {
                question: "How my website will look on tablet and smartphone?",
                answer: "Mobile optimized websites are now of prime importance as more and more users log in the web from tablets and smartphones. All the websites we make are mobile- friendly."
              },
              {
                question: "Will my website be set up for SEO?",
                answer: "All of our sites are built with best practices and without bloated code, optimizing it for Search engine. We also like to include SEO audits in all of our website designs."
              }
            ].map((faq, index) => (
              <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-6 sm:p-8 hover:shadow-lg transition-all duration-300 border border-gray-100 dark:border-gray-700">
                <h3 class="font-grotesk text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-3">
                  <span class="w-6 h-6 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-sm font-bold">
                    {index + 1}
                  </span>
                  {faq.question}
                </h3>
                <p class="font-sans text-gray-600 dark:text-gray-400 leading-relaxed pl-9">
                  {faq.answer}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 sm:py-32 bg-gradient-to-br from-gray-900 via-purple-900 to-blue-900 relative overflow-hidden">
      <!-- Animated Background -->
      <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 right-0 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
      </div>

      <div class="w-full px-4 sm:px-6 lg:grid-system relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="font-grotesk text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
            READY TO BEGIN?
          </h2>
          <p class="font-sans text-xl text-blue-100 mb-8 leading-relaxed">
            Let's schedule a call to discuss your project and explore how we can bring your vision to life.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact-form" class="group inline-flex items-center justify-center font-grotesk font-bold bg-white text-gray-900 px-8 py-4 rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-2xl">
              Start Your Project
              <span class="ml-3 group-hover:translate-x-2 transition-transform">‚ú®</span>
            </a>
            <a href="mailto:evolvewebsolapur@gmail.com" class="group inline-flex items-center justify-center font-grotesk font-medium border-2 border-white/30 text-white px-8 py-4 rounded-xl hover:border-white hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
              Email Directly
              <span class="ml-2 group-hover:translate-x-1 transition-transform">‚úâÔ∏è</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>