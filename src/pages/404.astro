---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout title="Page Not Found - EvolveWeb" description="The page you're looking for doesn't exist.">
  <Header />
  
  <main class="min-h-screen bg-white dark:bg-black pt-20 flex items-center justify-center">
    <div class="w-full px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
      <div class="text-center max-w-2xl mx-auto">
        <!-- Animated 404 -->
        <div class="mb-8">
          <div class="text-8xl sm:text-9xl font-grotesk font-bold text-gray-900 dark:text-white mb-4">
            404
          </div>
          <div class="w-32 h-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mx-auto mb-8"></div>
        </div>

        <h1 class="font-grotesk text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Page Not Found
        </h1>
        
        <p class="font-sans text-xl text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
          The page you're looking for doesn't exist or has been moved.
          Let's get you back to where you need to be.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="group inline-flex items-center justify-center font-grotesk font-bold bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-8 py-4 rounded-xl hover:bg-gray-800 dark:hover:bg-gray-100 transition-all duration-300 transform hover:scale-105">
            Go Home
            <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
          </a>
          <a href="/contact" class="group inline-flex items-center justify-center font-grotesk font-medium border-2 border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 px-8 py-4 rounded-xl hover:border-gray-400 dark:hover:border-gray-500 transition-all duration-300">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>