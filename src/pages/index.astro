---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout title="Home | Evolve Web Solapur" description="Crafting exceptional digital experiences with precision and innovation.">
  <Header />
  
  <main class="min-h-screen bg-white dark:bg-black">
    <!-- Hero Section with Grid System -->
    <section class="min-h-screen relative flex px-4 sm:px-6 sm:pt-0 pt-10 items-center justify-center overflow-hidden">
      <!-- Background Grid -->
      <div class="absolute inset-0 bg-grid-pattern bg-[length:50px_50px] opacity-20"></div>
      
      <!-- Animated Orbs -->
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl animate-float delay-2000"></div>

      <div class="grid-system relative z-10 py-20">
        <!-- Main Grid -->
        <div class="grid lg:grid-cols-12 gap-8 items-center">
          <!-- Left Column - Text Content -->
          <div class="lg:col-span-7 space-y-8 animate-fade-in-up">
            <!-- Badge -->
            <div class="inline-flex items-center gap-3 bg-gray-100 dark:bg-gray-800 rounded-full px-4 py-2">
              <div class="w-2 h-2 bg-green-600 rounded-full animate-pulse"></div>
              <span class="font-grotesk text-sm font-medium text-gray-700 dark:text-gray-300">Welcome to Evolve Web Solapur</span>
            </div>

            <!-- Main Headline -->
            <div class="space-y-6">
              <h1 class="font-grotesk text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight block text-transparent bg-clip-text bg-gradient-to-r from-gray-400 to-gray-600 dark:from-gray-300 dark:to-gray-500 dark:text-white leading-none">
                DIGITAL
                <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600">
                  EXCELLENCE
                </span>
              </h1>
              
              <p class="font-sans text-lg md:text-xl text-justify text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
                Evolve Web Solapur is the Best Web Design Company in Solapur, We create stunning websites that support your business and generate leads. If you are looking for help with your website we would love to hear from you.
              </p>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/contact" class="group inline-flex items-center justify-center font-grotesk font-medium bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-8 py-4 rounded-lg hover:bg-gray-800 dark:hover:bg-gray-100 transition-all duration-300 transform hover:scale-105">
                Start Your Project
                <span class="ml-2 group-hover:translate-x-1 transition-transform">‚Üí</span>
              </a>
              <a href="/work" class="group inline-flex items-center justify-center font-grotesk font-medium border-2 border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 px-8 py-4 rounded-lg hover:border-gray-400 dark:hover:border-gray-500 transition-all duration-300">
                View Our Work
              </a>
            </div>
          </div>

          <!-- Right Column - Visual Grid -->
          <div class="lg:col-span-5 animate-slide-in-right">
            <div class="grid grid-cols-2 gap-4">
              <!-- Grid Item 1 -->
              <div class="aspect-square bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900 rounded-2xl flex items-center justify-center p-6">
                <div class="text-center">
                  <div class="text-3xl font-grotesk font-bold text-gray-900 dark:text-white">20+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">Projects</div>
                </div>
              </div>
              
              <!-- Grid Item 2 -->
              <div class="aspect-square bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900 dark:to-blue-800 rounded-2xl flex items-center justify-center p-6">
                <div class="text-center">
                  <div class="text-3xl font-grotesk font-bold text-gray-900 dark:text-white">95%</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">Performance</div>
                </div>
              </div>
              
              <!-- Grid Item 3 -->
              <div class="aspect-square bg-gradient-to-br from-purple-100 to-purple-200 dark:from-purple-900 dark:to-purple-800 rounded-2xl flex items-center justify-center p-6">
                <div class="text-center">
                  <div class="text-3xl font-grotesk font-bold text-gray-900 dark:text-white">3.1s</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">Load Time</div>
                </div>
              </div>
              
              <!-- Grid Item 4 -->
              <div class="aspect-square bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900 dark:to-green-800 rounded-2xl flex items-center justify-center p-6">
                <div class="text-center">
                  <div class="text-3xl font-grotesk font-bold text-gray-900 dark:text-white">100%</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">Satisfaction</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Grid Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900 ">
      <div class="grid-system">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="font-grotesk text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            OUR SERVICES
          </h2>
          <p class="font-sans text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            We offer comprehensive digital solutions tailored to your unique business needs.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8 px-4 sm:px-6">
          <!-- Service 1 -->
          <div class="group bg-white dark:bg-gray-800 rounded-2xl p-8 hover:shadow-2xl transition-all duration-500 animate-fade-in-up">
            <div class="w-12 h-12 px-4 sm:px-6 bg-gray-900 dark:bg-white rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-white dark:text-gray-900 text-lg">üåê</span>
            </div>
            <h3 class="font-grotesk text-2xl font-bold text-gray-900 dark:text-white mb-4">Web Development</h3>
            <p class="font-sans text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
              We craft clean, modern, and responsive websites that represent your brand professionally. Our focus is on performance, usability, and visual appeal to ensure your website creates a strong first impression.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 dark:text-gray-400">
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Responsive & Mobile-Friendly
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Static Site Generation
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                SEO-Friendly Structure
              </li>
            </ul>
          </div>

          <!-- Service 2 -->
          <div class="group bg-white dark:bg-gray-800 rounded-2xl p-8 hover:shadow-2xl transition-all duration-500 animate-fade-in-up delay-100">
            <div class="w-12 h-12 bg-gray-900 dark:bg-white rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-white dark:text-gray-900 text-lg">üë®‚Äçüè´</span>
            </div>
            <h3 class="font-grotesk text-2xl font-bold text-gray-900 dark:text-white mb-4">Java Training</h3>
            <p class="font-sans text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
              We provide industry-oriented Java and IT training with real-time concepts, interview preparation, and practical assignments. Our training helps students build confidence and develop strong technical foundations.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 dark:text-gray-400">
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Practical Learning
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Java Full Stack Training
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Interview & Coding Preparation
              </li>
            </ul>
          </div>

          <!-- Service 3 -->
          <div class="group bg-white dark:bg-gray-800 rounded-2xl p-8 hover:shadow-2xl transition-all duration-500 animate-fade-in-up delay-200">
            <div class="w-12 h-12 bg-gray-900 dark:bg-white rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <span class="text-white dark:text-gray-900 text-lg">üì¢</span>
            </div>
            <h3 class="font-grotesk text-2xl font-bold text-gray-900 dark:text-white mb-4">Social Media Marketing</h3>
            <p class="font-sans text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
              Grow your business with targeted social media strategies designed to increase awareness, engagement, and conversions. We create impactful content and manage campaigns that reach your ideal audience.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 dark:text-gray-400">
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Brand Awareness
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Customer Engagement
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Lead Generation
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

	    <!-- CTA Section -->
    <section class="py-20 bg-gray-200 text-black">
      <div class="grid-system px-4 sm:px-6">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="font-grotesk text-4xl md:text-6xl font-bold mb-6">
            READY TO ELEVATE YOUR DIGITAL PRESENCE?
          </h2>
          <p class="font-sans text-xl text-gray-600 mb-8 leading-relaxed">
            Let's collaborate to create something extraordinary. We're passionate about turning your vision into a remarkable digital experience.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="group inline-flex items-center justify-center font-grotesk font-medium bg-white text-gray-900 px-8 py-4 rounded-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105">
              Start a Project
              <span class="ml-2 group-hover:translate-x-1 transition-transform">‚Üí</span>
            </a>
            <a href="/work" class="group inline-flex items-center justify-center font-grotesk font-medium border-2 border-gray-700 text-gray-700 px-8 py-4 rounded-lg hover:border-gray-600 hover:text-black transition-all duration-300">
              See Our Work
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</BaseLayout>